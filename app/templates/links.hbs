<div class="page-header">
  <h1>All links</h1>
</div>

<div class="btn-toolbar">
  {{#if isAuthenticated}}
    {{#link-to "link/new" class="btn btn-primary"}}
      <i class="fa fa-plus"></i>&nbsp;
      Add your link
    {{/link-to}}
  {{/if}}
</div>


<ul class="list-unstyled links">
  {{#each}}
    {{link-view link=this tag='li' favoriteAction='favorite' unFavoriteAction='unfavorite' currentUser=currentUser}}
  {{/each}}
</ul>
