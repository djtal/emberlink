<div class="page-header">
  <h1>Add a link</h1>
</div>


<form role="form">
  <div class="form-group">
    <label for="linkUrl">Url</label>
    {{input type="url" class="form-control" id="linkUrl" placeholder="Your url..." valueBinding="model.url"}}
  </div>
  <div class="form-group">
    <label for="linkName">Title</label>
  {{input class="form-control" id="linkName" placeholder="Title" valueBinding="model.name"}}
  </div>
  <div class="form-group">
    <label for="linkDescription">Description</label>
    {{textarea class="form-control" rows="3" id="linkDescription" valueBinding="model.description"}}
  </div>


  <button type="submit" class="btn btn-primary" {{action 'createLink'}}>Add</button>
  or
  {{#link-to "links" class="btn btn-default"}}Cancel{{/link-to}}
</form>
