
<form class="form-signin" role="form">
  <h2 class="form-signin-heading">Please sign in</h2>
  {{input type="email" valueBinding="email" class="form-control" placeholder="Email address"}}
  {{input type="password" valueBinding="password" class="form-control" placeholder="Password"}}
  <div class="checkbox">
    <label>
      {{input type="checkbox" valueBinding="remember-me"}} Remember me
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit" {{action 'sign_in'}}>Sign in</button>
</form>
